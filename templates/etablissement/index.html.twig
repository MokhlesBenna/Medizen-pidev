{% extends 'base.html.twig' %}

{% block title %}Departement index{% endblock %}

{% block body %}

<div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <a href="etablissement/map" class="d-inline-block border rounded-pill py-1 px-4 btn btn-primary">Localisation des Etablissements</a>
                <h1>Health Care Solutions</h1>
            </div>
             <form action="{{ path('app_etablissement_index') }}" method="get" class="mb-3">
            <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Rechercher par nom...">
            <button type="submit" class="btn btn-primary">Rechercher</button>
             </form>
             
        </div>
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <a href="{{path('app_etablissement_stat')}}" class="d-inline-block border rounded-pill py-3 px-4 btn btn-primary">Statistique</a>
            </div>
       
            <div class="row g-4">
            {% if etablissements is empty %}
            <h2>Pas d'etablissements</h2>
            {% else %}
            {% for  etablissement in etablissements %}
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item bg-light rounded h-100 p-5">
                        <div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
                            <i class="fa fa-heartbeat text-primary fs-4"></i>
                        </div>
                        <h4 class="mb-3">{{ etablissement.name }}</h4>
                        <p class="mb-4">{{ etablissement.type }}</p>
                        <a class="btn" href="{{ path('app_etablissement_delete', {'id': etablissement.id}) }}"><i class="fa fa-plus text-primary me-3"></i>Read More</a>
                    </div>
                </div>
                 {%  endfor  %}
                 {% endif %}
            </div>
        </div>
</div>

{% endblock %}
