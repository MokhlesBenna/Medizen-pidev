{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Datedecreation</th>
                <th>Nom</th>
                <th>Nbrlikes</th>
                <th>Nbrdislikes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.Contenu }}</td>
                <td>{{ commentaire.Datedecreation ? commentaire.Datedecreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.nom }}</td>
                <td>{{ commentaire.nbrlikes }}</td>
                <td>{{ commentaire.nbrdislikes }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Create new</a>
{% endblock %}
