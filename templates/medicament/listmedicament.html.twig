{% extends 'base.html.twig' %}

{% block body %}
    <div class="row g-4">
        {% for medicament in pagination %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 service-item shadow-sm">
                    <img src="{{ asset('img/' ~ medicament.image) }}" alt="{{ medicament.name }}" class="card-img-top img-fluid">
                    <div class="card-body p-4">
                        <h4 class="card-title text-center">{{ medicament.name }}</h4>
                        <p class="card-text">{{ medicament.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-primary" href="{{ path('medicament_details', {'id': medicament.id}) }}"><i class="fa fa-plus me-2"></i>Read More</a>
                            <span class="text-muted">{{ medicament.price }} dt</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Chatbot Integration -->
    <div id="chatbot-container"></div>

    <script src="https://cdn.jsdelivr.net/npm/botui/build/botui.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const botui = new BotUI('chatbot-container');

            // You can customize the conversation logic here
            botui.message.bot({
                content: 'Hello! How can I assist you today?',
                delay: 1000,
            });

            // Example conversation
            botui.message.add({
                content: 'Do you have any questions about medications?',
                delay: 1500,
            }).then(function () {
                return botui.action.button({
                    action: [
                        { text: 'Yes', value: 'yes' },
                        { text: 'No', value: 'no' },
                    ],
                });
            }).then(function (res) {
                if (res.value === 'yes') {
                    botui.message.bot({
                        content: 'Great! What specific medication are you interested in?',
                        delay: 1000,
                    });
                    // Add more conversation steps as needed
                } else {
                    botui.message.bot({
                        content: 'If you have any other questions, feel free to ask!',
                        delay: 1000,
                    });
                }
            });
        });
    </script>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </ul>
    </nav>
{% endblock %}
