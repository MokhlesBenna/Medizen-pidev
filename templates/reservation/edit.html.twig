{% extends 'base.html.twig' %}

{% block body %}

<div class="container py-5">
    <h1 class="mb-4">Modifier la RÃ©servation</h1>
    <form action="{{ path('app_reservation_edit', {'id': reservation.id}) }}" method="post">
        {{ form_start(form) }}
        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">{{ form_label(form.name) }}</th>
                        <td>{{ form_widget(form.name) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ form_label(form.surname) }}</th>
                        <td>{{ form_widget(form.surname) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ form_label(form.mobile) }}</th>
                        <td>{{ form_widget(form.mobile) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ form_label(form.address) }}</th>
                        <td>{{ form_widget(form.address) }}</td>
                    </tr>
                    
                    <tr>
                        <th scope="row">{{ form_label(form.reservation_date) }}</th>
                        <td>{{ form_widget(form.reservation_date) }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ form_label(form.problem_description) }}</th>
                        <td>{{ form_widget(form.problem_description) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="text-center"> 
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        </div>
        {{ form_end(form) }}
