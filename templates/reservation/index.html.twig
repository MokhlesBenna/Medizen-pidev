{% extends 'base.html.twig' %}

{% block body %}

<div class="container py-5">
    <h1 class="display-4 text-center mb-5">Liste des Réservations</h1>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Date de Réservation</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservations %}
                        <tr>
                            
                            <td>{{ reservation.surname }}</td>
                            <td>{{ reservation.mobile }}</td>
                            <td>{{ reservation.reservationDate|date('Y-m-d H:i') }}</td>
                            <td style="color: {% if reservation.status == 'pending' %}orange{% elseif reservation.status == 'Accepted' %}green{% else %}red{% endif %};">{{ reservation.status }}</td>
                            <td>
                                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <form action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" method="post" style="display: inline-block;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation?')">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="homesection howsteps" style="background:#ffffff!important;text-align:center;">
    <div class="pf-container">
        <h2 class="maintxt">Pourquoi prendre rendez-vous avec Medizen</h2>
        <p class="subtitle">Avec Medizen, prenez rendez-vous en ligne avec votre médecin autrement</p>

        <div class="carousel-container">
            <div class="carousel" id="carousel">
                <div class="item">
                    <img src="https://cdn.med.tn/img/step1.svg" alt="Accédez rapidement à votre médecin">
                    <p>Accédez rapidement à votre médecin</p>
                </div>
                <div class="item">
                    <img src="https://cdn.med.tn/img/step2.svg" alt="Prenez rendez-vous en ligne à tout moment">
                    <p>Prenez rendez-vous en ligne à tout moment</p>
                </div>
                <div class="item">
                    <img src="https://cdn.med.tn/img/step3.svg" alt="Recevez des sms/mail de rappel personnalisés">
                    <p>Recevez des sms/mail de rappel personnalisés</p>
                </div>
            </div>
        </div>
        <div class="container text-center my-4">
            <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">Réserver Maintenant!</a>
        </div>
    </div>
</div>

<style>
.carousel-container {
    overflow: hidden;
}

.carousel {
    display: flex;
    scroll-snap-type: x mandatory;
    white-space: nowrap;
    overflow-x: auto;
}

.item {
    flex: 0 0 auto;
    scroll-snap-align: start;
    padding: 0 10px;
    text-align: center;
    width: 33.33%;
}

.item img {
    max-width: 100%;
    height: auto;
}
</style>

{% endblock %}
