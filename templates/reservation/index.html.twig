{% extends 'base.html.twig' %}

{% block body %}

<div class="container py-5">
    <h1 class="display-4 text-center mb-5">Liste des Réservations</h1>

   
    <div class="row justify-content-center mb-3">
        <div class="col-md-6">
            <form action="{{ path('app_reservation_index') }}" method="get" class="form-inline">
                <div class="form-group">
                    

                </div>
                
            </form>
        </div>
    </div>

                <input type="text" class="form-control" placeholder="Recherche" id="rech">
                <br>
                <script>
        function filterTable() {
            const filter = document.getElementById('rech').value.toUpperCase();
            const rows = document.querySelectorAll('table tr');
            for (let i = 1; i < rows.length; i++) {
                const cols = rows[i].querySelectorAll('td');
                let visible = false;
                for (let j = 0; j < cols.length; j++) {
                    const cell = cols[j];
                    if (cell.innerText.toUpperCase().indexOf(filter) > -1) {
                        visible = true;
                        break;
                    }
                }
                rows[i].style.display = visible ? '' : 'none';
            }
        }
        document.getElementById('rech').addEventListener('keyup', filterTable);
    </script>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Date de Réservation</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.name }}</td>
                            <td>{{ reservation.surname }}</td>
                            <td>{{ reservation.mobile }}</td>
                            <td>{{ reservation.reservationDate|date('Y-m-d H:i') }}</td>
                            <td style="color: {% if reservation.status == 'pending' %}orange{% elseif reservation.status == 'Accepted' %}green{% else %}red{% endif %};">{{ reservation.status }}</td>
                            <td>
                                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <form action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" method="post" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6">Aucun enregistrement trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                <div class="d-flex justify-content-center my-4">
                    {{ knp_pagination_render(reservations) }}
                </div>
            </div>
        </div>
    </div>

   
    <div class="row justify-content-center mb-3">
        <div class="col-md-6">
            <div class="btn-group w-100" role="group" aria-label="Filtrer par statut">
                <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary {% if not status %}active{% endif %}">Toutes</a>
                <a href="{{ path('app_reservation_index', {'status': 'Pending'}) }}" class="btn btn-outline-primary {% if status == 'Pending' %}active{% endif %}">En attente</a>
                <a href="{{ path('app_reservation_index', {'status': 'Accepted'}) }}" class="btn btn-outline-success {% if status == 'Accepted' %}active{% endif %}">Acceptées</a>
                <a href="{{ path('app_reservation_index', {'status': 'Rejected'}) }}" class="btn btn-outline-danger {% if status == 'Rejected' %}active{% endif %}">Rejetées</a>
            </div>
        </div>
    </div>
</div>



<div class="container text-center my-4">
    <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">Réserver Maintenant!</a>
</div>

{% endblock %}
