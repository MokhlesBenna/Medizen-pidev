{% extends 'base.html.twig' %}

{% block body %}
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <p class="d-inline-block border rounded-pill py-1 px-4">Rendez-vous</p>
                <h1 class="mb-4">Prenez rapidement un rendez-vous avec votre médecin souhaité !</h1>
                <p class="mb-4">Sélectionnez votre médecin, choisissez la date et l'heure de votre rendez-vous.</p>
                <div class="bg-light rounded d-flex align-items-center p-5 mb-4">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                        <i class="fa fa-phone-alt text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">Pour tout type de réclamation appelez-nous maintenant</p>
                        <h5 class="mb-0">+216 12 345 678</h5>
                    </div>
                </div>
                <div class="bg-light rounded d-flex align-items-center p-5">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                        <i class="fa fa-envelope-open text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">Pour tout type envoyez-nous un e-mail maintenant</p>
                        <h5 class="mb-0">medizen@gmail.com</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}
                <div class="bg-light rounded p-5 mb-4">
                    <div class="mb-3">
                        {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.surname, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom de famille'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.mobile, {'attr': {'class': 'form-control', 'placeholder': 'Votre mobile'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.reservation_date, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.problem_description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Décrivez votre problème'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.doctor, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Réserver un rendez-vous</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
