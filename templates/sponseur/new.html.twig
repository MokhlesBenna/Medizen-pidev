{% extends 'baseBack.html.twig' %}

{% block title %}New sponseur
{% endblock %}

{% block body %}
	<h1>Create new sponseur</h1>
	<div class="row">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 18px;">

			<div class="card col-md-6">
				<div class="card-body">
					<h5 class="card-title">Ajouter un Sponseur</h5>

					<!-- General Form Elements -->
					{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
					<label for="inputText" class="col-sm-4 col-form-label">Nom</label>
					<div class="col-sm-10">
						{{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder': 'Nom'}}) }}

					</div>
					{{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-4 col-form-label">Email</label>
					<div class="col-sm-20">
						{{ form_widget(form.email,{'attr': {'class': 'form-control', 'placeholder': 'nom.prenom@gmail.com'}}) }}

					</div>
					{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-4 col-form-label">Numero</label>
					<div class="col-sm-10">
						{{ form_widget(form.numero,{'attr':{'class':'form-control','placeholder': 'Num√©ro'}}) }}
					</div>
					{{ form_errors(form.numero,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-4 col-form-label">logo</label>
					<div class="col-sm-10">
						{{ form_widget(form.logo,{'attr':{'class':'form-control','placeholder': 'url:'}}) }}

					</div>
					{{ form_errors(form.logo,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-4 col-form-label">pack</label>
					<div class="col-sm-10">
						{{ form_widget(form.pack,{'attr':{'class':'form-control','placeholder': 'Type de pack'}}) }}

					</div>
					{{ form_errors(form.pack,{'attr':{'class':'text-danger'}}) }}


					{{ include('sponseur/_form.html.twig') }}


					<a href={{ path('app_sponseur_index') }} class="btn btn-primary">Liste</a>

					{{ form_end(form) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}
