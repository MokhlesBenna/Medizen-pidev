{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Détails du Docteur</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                        <tr>
                        <th scope="row">Nom</th>
                        <td>{{ docteur.Nom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prénom</th>
                        <td>{{ docteur.Prenom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Mail</th>
                        <td>{{ docteur.mail }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Expérience</th>
                        <td>{{ docteur.experience }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Mobile</th>
                        <td>{{ docteur.mobile }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Adresse</th>
                        <td>{{ docteur.addresse }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

  <div class="d-flex justify-content-center">
    <a href="{{ path('app_docteur_index') }}" class="btn btn-primary mx-2">Retour à la liste</a>
    <a href="{{ path('app_docteur_edit', {'id': docteur.id}) }}" class="btn btn-info mx-2">Modifier</a>
    <a href="{{ path('app_docteur_delete', {'id': docteur.id}) }}" class="btn btn-danger mx-2">Supprimer</a>
</div>


{% endblock %}
