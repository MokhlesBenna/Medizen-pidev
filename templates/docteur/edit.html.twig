{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="display-4 text-center mb-5">Modifier le docteur</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="{{ path('app_docteur_edit', {'id': docteur.id}) }}" method="post">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.nom, {'attr': {'class': 'form-control'}, 'label': 'Nom'}) }}
                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                </div>
                <div class="form-group">
                    {{ form_row(form.prenom, {'attr': {'class': 'form-control'}, 'label': 'Prénom'}) }}
                    <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                </div>
                <div class="form-group">
                    {{ form_row(form.mail, {'attr': {'class': 'form-control'}, 'label': 'E-mail'}) }}
                    <div class="text-danger">{{ form_errors(form.mail) }}</div>
                </div>
                <div class="form-group">
                    {{ form_row(form.experience, {'attr': {'class': 'form-control'}, 'label': 'Expérience'}) }}
                    <div class="text-danger">{{ form_errors(form.experience) }}</div>
                </div>
                <div class="form-group">
                    {{ form_row(form.mobile, {'attr': {'class': 'form-control'}, 'label': 'Mobile'}) }}
                    <div class="text-danger">{{ form_errors(form.mobile) }}</div>
                </div>
                <div class="form-group">
                    {{ form_row(form.addresse, {'attr': {'class': 'form-control'}, 'label': 'Adresse'}) }}
                    <div class="text-danger">{{ form_errors(form.addresse) }}</div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary btn-block">Enregistrer les modifications</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
