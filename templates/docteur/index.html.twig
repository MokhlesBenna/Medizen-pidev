{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="display-4 text-center mb-5">Liste des docteurs</h1>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Mail</th>
                            <th scope="col">Expérience</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for docteur in docteurs %}
                        <tr>
                            <td>{{ docteur.Nom }}</td>
                            <td>{{ docteur.Prenom }}</td>
                            <td>{{ docteur.mail }}</td>
                            <td>{{ docteur.experience }}</td>
                            <td>{{ docteur.mobile }}</td>
                            <td>{{ docteur.addresse }}</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Actions">
                                    <a href="{{ path('app_docteur_show', {'id': docteur.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                                    <a href="{{ path('app_docteur_edit', {'id': docteur.id}) }}" class="btn btn-sm btn-info">Modifier</a>
                                    <form action="{{ path('app_docteur_delete', {'id': docteur.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce docteur?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ docteur.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7">Aucun enregistrement trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container text-center my-4">
    <a href="{{ path('app_docteur_new') }}" class="btn btn-primary">Ajouter un nouveau docteur</a>
</div>
{% endblock %}
