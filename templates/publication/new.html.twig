{% extends 'base.html.twig' %}


{% block title %}{% endblock %}

{% block body %}
    
    {% block appointment %}
        <!-- Appointment Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5">
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <p class="d-inline-block border rounded-pill py-1 px-4">Publication</p>
                        <h1 class="mb-4">Construisez ensemble une communauté en meilleure santé..</h1>
                        
                        <div class="bg-light rounded d-flex align-items-center p-5 mb-4">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                                        <img src="https://cdn.med.tn/img/step2.svg" alt="Contribuez à construire un monde plus sain">
                                    </div>
                                </div>
                                <div class="col">
                                    <p class="mb-0">Ajoutez votre publication dès maintenant et faites une différence dans le monde de la santé.</p>
                                </div>
                            </div>
                            <i class="fa fa-pencil text-primary ms-auto"></i>
                        </div>

                    </div>
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="bg-light rounded h-100 d-flex align-items-center p-5">
                            {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                                <div class="row g-3">
                                    <div class="col-12 input-group">
                                        <span class="input-group-text"><i class="fa fa-pen text-primary"></i></span>
                                        {{ form_widget(form.Contenu, {'attr': {'class': 'form-control border-0', 'placeholder': 'Partagez vos idées, expériences ou questions sur la santé ici...'}}) }}
                                    </div>
                                    <div class='text-danger'>
                                    {{ form_errors(form.Contenu) }}
</div>
                                    <div class="col-12 col-sm-6 input-group">
                                        <span class="input-group-text"><i class="fa fa-image text-primary"></i></span>
                                        {{ form_widget(form.image, {'attr': {'class': 'form-control border-0', 'placeholder': 'Insérer une image', 'style': 'height: 55px;'}}) }}
                                    </div>
                                    <div class='text-danger'>
                                    {{ form_errors(form.image) }}
                                    </div>
                                     <div class="mb-3">
                            <label for="Datedecreation" class="col-form-label">Date de création</label>
                            
                            {{ form_widget(form.Datedecreation) }}
                            
                        </div>
                        <div class='text-danger'>
                        {{ form_errors(form.Datedecreation) }}
                        </div>
                                    <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                        
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Appointment End -->
    {% endblock %}

{% endblock %}