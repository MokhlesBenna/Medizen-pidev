{% extends 'base.html.twig' %}






{% block title %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="col-lg-12">
                <h1 class="text-center">Modifier la publication</h1>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="border rounded p-4" style="background-color: #e3f2fd;">
                    <form method="post">
                        {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_label(form.Contenu) }}
                            {{ form_widget(form.Contenu, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.Datedecreation, 'Date de création') }}
                            {{ form_widget(form.Datedecreation, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary">{{ button_label1 }}</button>

                        {{ form_end(form) }}

                        <a href="{{ path('app_publication_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


