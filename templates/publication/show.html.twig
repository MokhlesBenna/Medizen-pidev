{% extends 'base.html.twig' %}

{% block title %}publication{% endblock %}

{% block body %}
    <div class="container">
	 <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="col-lg-12">
             <h1 class="text-center">Details de la publication</h1>
		    </div>
     </div>
<div class="row justify-content-center">
            <div class="col-lg-7">
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ publication.id }}</td>
                </tr>
                
                <tr>
                    <th scope="row">Contenu</th>
                    <td>{{ publication.contenu }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de création</th>
                    <td>{{ publication.dateDeCreation ? publication.dateDeCreation|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Image</th>
                    <td>{{ publication.image }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_publication_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="btn btn-primary">Modifier</a>

       
    </div>
	</div>
	</div>
{% endblock %}

