{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 50px;">
        <div class="col-lg-12">
            <h1 class="text-center">Détails de la publication</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Contenu: {{ publication.contenu }}</p>
                    <p class="card-text">Publication créée le: {{ publication.dateDeCreation ? publication.dateDeCreation|date('Y-m-d') : '' }}</p>
                    {% if publication.image %}
                        <img src="{{ asset('img/' ~ publication.image) }}" class="card-img-top" alt="Image de la publication">
                    {% endif %}
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group" aria-label="Actions">
                        {% if like %}
                            <a href="{{ path('app_publication_like', {'id': publication.id}) }}" class="btn btn-danger"><i class="fas fa-thumbs-down"></i> Unlike</a>
                        {% else %}
                            <a href="{{ path('app_publication_like', {'id': publication.id}) }}" class="btn btn-primary"><i class="fas fa-thumbs-up"></i> Like</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div id="comments-section" class="mt-4">
    <h2 class="mb-3">Commentaires</h2>
    {% for commentaire in publication.commentaires %}
        <div class="card mb-3">
    <div class="card-body">
        <p class="card-text">{{ commentaire.contenu }}</p>
        <p class="card-text"><strong>Par :</strong> {{ commentaire.idUser.username }} (ID: {{ commentaire.idUser.id }})</p>
        <p class="card-text"><strong>Date :</strong> {{ commentaire.Datedecreation ? commentaire.Datedecreation|date('Y-m-d H:i:s') : '' }}</p>
        <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-info"><i class="fas fa-pencil-alt"></i></a>
    </div>
</div>

      


    {% endfor %}
</div>
            <!-- Formulaire pour ajouter un commentaire -->
            <form method="post" action="{{ path('app_publication_comment', {'id': publication.id}) }}" style="margin-top: 20px;">
                <textarea name="commentText" class="form-control" placeholder="Ajouter un commentaire"></textarea>
                <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Ajouter</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
