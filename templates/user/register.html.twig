{% extends 'base.html.twig' %}

{% block title %}Create new acoount
{% endblock %}

{% block body %}
	<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				{{ form_start(form,{ attr: {novalidate: 'novalidate' , 'class':'login100-form validate-form'} }) }}


				<span class="login100-form-title p-b-49">
					Nouveau Compte
				</span>


				<div class="wrap-input100 validate-input m-b-23">
					<span class="label-input100">{{ form_label(form.username) }}</span>

					{{ form_widget(form.username,{ attr: {'class':'input100'}}, 'Type your username') }}
					<span class="focus-input100" data-symbol="&#xf206;"></span>
					{% if form_errors(form.username) is not empty  %}
						{% for error in form.username.vars['errors'] %}
							<span class="text-danger">{{ error.message }}</span>
						{% endfor %}
					{% endif %}
				</div>
				<div class="wrap-input100 validate-input m-b-23">

					<span class="label-input100">{{ form_label(form.lastname) }}</span>

