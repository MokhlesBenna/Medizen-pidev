				</div>

				<div class="wrap-input100 validate-input m-b-23">
					<span class="label-input100">{{ form_label(form.password) }}</span>


					{{ form_widget(form.password,{ attr: {'class':'input100'}}) }}

					<span class="focus-input100" data-symbol="&#xf206;"></span>
					{% if form_errors(form.password) is not empty  %}

						{% for error in form.password.vars['errors'] %}

