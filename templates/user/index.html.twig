{% extends 'baseback.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				 {% if user.blocked %} 
					<tr class="bg-danger bg-opacity-50">
					{% else %}
					<tr>
				{% endif %}


					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>
						<!-- Icon to ban user -->
						<a href="{{ path('app_ban_user', {'id': user.id}) }}" class="btn btn-danger">

							<i class="bi bi-x-circle"></i>
							Ban User
						</a>
					</td>


				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_register') }}">Create new</a>

{% endblock %}
