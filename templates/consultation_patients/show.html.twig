{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title mb-4">Détails de la Consultation</h1>
                    <div class="mb-3">
                        <h5>Nom: {{ consultation_patient.name }}</h5>
                    </div>
                    <div class="mb-3">
                        <h5>Prénom: {{ consultation_patient.surname }}</h5>
                    </div>
                    <div class="mb-3">
                        <h5>Date du rendez-vous: {{ consultation_patient.reservation_date|date('d/m/Y H:i') }}</h5>
                    </div>
                    <div class="mb-3">
                        <h5>Remarques des docteurs:</h5>
                        <p>{{ consultation_patient.RemarquesDesDocteurs }}</p>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="{{ path('app_consultation_patients_index') }}" class="btn btn-secondary">Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
