{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="display-4 text-center mb-5">Liste des Consultations</h1>

    <div class="row justify-content-center mb-3">
        <div class="col-md-6">
            <form action="{{ path('app_consultation_patients_index') }}" method="get">
                <div class="input-group mb-3">
                    <input type="text" class="form-control text-center" placeholder="Recherche" id="rech">
                    
                </div>
            </form>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for consultation_patient in consultation_patients %}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{ consultation_patient.name }} {{ consultation_patient.surname }}</h5>
                    <p class="card-text">Date du rendez-vous: {{ consultation_patient.reservation_date|date('d/m/Y H:i') }}</p>
                    <p class="card-text">Remarques des docteurs: {{ consultation_patient.RemarquesDesDocteurs }}</p>
                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_consultation_patients_show', {'id': consultation_patient.id}) }}" class="btn btn-primary me-md-2">Voir</a>
                        <a href="{{ path('app_consultation_patients_edit', {'id': consultation_patient.id}) }}" class="btn btn-info me-md-2">Modifier</a>
                        <form action="{{ path('app_consultation_patients_delete', {'id': consultation_patient.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette consultation?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation_patient.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col">
            <p class="text-center">Aucun enregistrement trouvé.</p>
        </div>
        {% endfor %}
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <a href="{{ path('app_consultation_patients_new') }}" class="btn btn-primary">Ajouter une nouvelle consultation</a>
        </div>
    </div>
</div>

<script>
    function filterConsultations() {
        const filter = document.getElementById('rech').value.toUpperCase();
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            const name = card.querySelector('.card-title').innerText.toUpperCase();
            if (name.includes(filter)) {
                card.style.display = '';
            } else {
                card.style.display = 'none';
            }
        });
    }
    document.getElementById('rech').addEventListener('keyup', filterConsultations);
</script>

{% endblock %}
