{% extends 'base.html.twig' %}

{% block title %}Nouvelle ConsultationPatient{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-6">
            <div class="mb-4">
                <h1 class="fw-bold">Ajouter une nouvelle consultation</h1>
                <p class="lead">Remplissez le formulaire ci-dessous pour créer une nouvelle consultation.</p>
            </div>
            <div class="bg-light rounded p-4 mb-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-primary text-white p-3 me-3">
                        <i class="fa fa-user-md fa-3x"></i>
                    </div>
                    <div>
                        <p class="mb-1">Pour toute réclamation, appelez-nous maintenant</p>
                        <h5 class="mb-0">+216 12 345 678</h5>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary text-white p-3 me-3">
                        <i class="fa fa-envelope-open fa-3x"></i>
                    </div>
                    <div>
                        <p class="mb-1">Pour tout type, envoyez-nous un e-mail maintenant</p>
                        <h5 class="mb-0">medizen@gmail.com</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="bg-light rounded p-5 mb-4">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Nom du patient') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.surname, 'Prénom du patient') }}
                    {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.surname) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.RemarquesDesDocteurs, 'Remarques des docteurs') }}
                    {{ form_widget(form.RemarquesDesDocteurs, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.RemarquesDesDocteurs) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Créer Consultation</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>
    $(document).ready(function(){
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
{% endblock %}