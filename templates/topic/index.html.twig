{% extends 'baseBack.html.twig' %}
{% block title %}Topic Index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="col-lg-12">
                <h1 class="text-center">Sujets</h1>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-7"><div class="card-body">
			<h5 class="card-title"></h5>
			<div class="row">
				<div class="col">
					<input type="text" value="" class="form-control" placeholder="Recherche de Titre" id="searchTitre">
				</div>
				
			</div>
		</div>

                <table class="table table-striped table-bordered" id="dataTable">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Contenu</th>
                            <th scope="col">Date de création</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if topics is not empty %}
                            {% for topic in topics %}
                                <tr>
                                    <td>{{ topic.id }}</td>
                                    <td>{{ topic.titre }}</td>
                                    <td>{{ topic.contenu }}</td>
                                    <td>{{ topic.dateDeCreation ? topic.dateDeCreation|date('Y-m-d') : '' }}</td>
                                    <td>
                                        <a href="{{ path('app_topic_show', {'id': topic.id}) }}" >Afficher</a>
                                        <a href="{{ path('app_topic_edit', {'id': topic.id}) }}" >Modifier</a>
                                        <a href="{{ path('app_topic_delete', {'id': topic.id}) }}" >Supprimer</a>
                                        <a href="{{ path('admin_publication_list', {'id': topic.id}) }}" >Consulter liste</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun enregistrement trouvé.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-body">
			<h5 class="card-title"></h5>
			<div class="row">
				<div class="col">
					<input type="text" value="" class="form-control" placeholder="Recherche de Titre" id="searchTitre">
				</div>
				
			</div>
		</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
	$(document).ready(function () { // Function to perform the search based on the specified column
function searchColumn(columnIndex, value) {
$("#dataTable tbody tr").filter(function () {
var cellText = $(this).find("td").eq(columnIndex).text().toLowerCase();
var found = cellText.indexOf(value) > -1;
$(this).toggle(found);
});
}

// Event handlers for each input element
$("#searchTitre").on("keyup", function () {
searchColumn(1, $(this).val().toLowerCase());
});

});
</script>
{% endblock %}
