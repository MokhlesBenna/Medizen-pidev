{% extends 'baseBack.html.twig' %}
{% block title %}Topic Index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="col-lg-12">
                <h1 class="text-center">Sujets</h1>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-7">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Contenu</th>
                            <th scope="col">Date de création</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if topics is not empty %}
                            {% for topic in topics %}
                                <tr>
                                    <td>{{ topic.id }}</td>
                                    <td>{{ topic.titre }}</td>
                                    <td>{{ topic.contenu }}</td>
                                    <td>{{ topic.dateDeCreation ? topic.dateDeCreation|date('Y-m-d') : '' }}</td>
                                    <td>
                                        <a href="{{ path('app_topic_show', {'id': topic.id}) }}" >Afficher</a>
                                        <a href="{{ path('app_topic_edit', {'id': topic.id}) }}" >Modifier</a>
                                        <a href="{{ path('app_topic_delete', {'id': topic.id}) }}" >Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun enregistrement trouvé.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
