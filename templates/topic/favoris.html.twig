{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for favori in dataFavoris %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ favori.topic.Titre }}</h5>
                            <p class="card-text">{{ favori.topic.Contenu }}</p>
                            <a href="{{ path('app_topic_details', {'id': favori.topic.id}) }}" >
                                <i class="fas fa-eye text-success" ></i> 
                            </a>
                            <form action="{{ path('app_deletedufavoris', {'id': favori.topic.id}) }}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link">
                                    <i class="fas fa-trash-alt text-danger"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
