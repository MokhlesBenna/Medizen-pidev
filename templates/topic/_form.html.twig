<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8"> <!-- Modifier la taille du conteneur -->
            <div class="card">
                <div class="card-body ">
        {{ form_start(form,{attr: {'novalidate': 'novalidate'}}) }}
    
        <div class="row g-3">
            <div class="col-md-12">
                <div class="form-floating">
                    <p style=" color: black;">
                        {{ form_label(form.Titre) }}      
                    </p>        
                    {{ form_widget(form.Titre ,  {'attr': {'class': 'form-control border-2'}}) }} 
                    

                    {% if form_errors(form.Titre) is not empty  %}
                        {% for error in form.Titre.vars['errors'] %}
                            <p class="text-danger">{{ error.message }}</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <p style=" color: black;">
                        {{ form_label(form.Contenu) }}      
                    </p>        
                    {{ form_widget(form.Contenu ,  {'attr': {'class': 'form-control border-2'}}) }} 
                    

                    {% if form_errors(form.Contenu) is not empty  %}
                        {% for error in form.Contenu.vars['errors'] %}
                            <p class="text-danger">{{ error.message }}</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <p style=" color: black;">
                        {{ form_label(form.Datedecreation,"Date de creation") }}      
                    </p>        
                    {{ form_widget(form.Datedecreation ,  {'attr': {'class': 'form-control border-2'}}) }} 
                    

                    {% if form_errors(form.Datedecreation) is not empty  %}
                        {% for error in form.Datedecreation.vars['errors'] %}
                            <p class="text-danger">{{ error.message }}</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            
            
             
                
                            
            <div class="col-10 col-sm-4">            
                <button class="btn btn-primary w-100 py-3">{{ button_label|default('Enregistrer') }}</button>   
            </div> 
        </div>
        

{{ form_end(form) }}
 </div>
            </div>
        </div>
    </div>
</div>