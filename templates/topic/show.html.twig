{% extends 'baseBack.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <div class="container">
	 <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="col-lg-12">
             <h1 class="text-center">Details du sujet</h1>
		    </div>
     </div>
<div class="row justify-content-center">
            <div class="col-lg-7">
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ topic.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ topic.titre }}</td>
                </tr>
                <tr>
                    <th scope="row">Contenu</th>
                    <td>{{ topic.contenu }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de création</th>
                    <td>{{ topic.dateDeCreation ? topic.dateDeCreation|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_topic_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_topic_edit', {'id': topic.id}) }}" class="btn btn-primary">Modifier</a>

       
    </div>
	</div>
	</div>
{% endblock %}
